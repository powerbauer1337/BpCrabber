# Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/beatport_db"

# Beatport API
BEATPORT_API_KEY=your_beatport_api_key_here
BEATPORT_API_SECRET=your_beatport_api_secret_here

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=900 # 15 minutes in seconds

# File Upload
MAX_FILE_SIZE=10485760 # 10MB in bytes
UPLOAD_DIR=uploads

# Cache (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour in seconds

# API Keys (if needed)
# API_KEY=your_api_key_here

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# File Operations Configuration
STREAM_BUFFER_SIZE=8192

# Shell Server Configuration
ALLOWED_COMMANDS=git,npm,node,ts-node,typescript
MAX_EXECUTION_TIME=30000  # 30 seconds in milliseconds

# Knowledge Graph Configuration
STORAGE_PATH=.cursor/knowledge
MAX_ENTRIES=10000

# Task Manager Configuration
TASK_STORAGE_PATH=.cursor/tasks
MAX_TASKS=1000
