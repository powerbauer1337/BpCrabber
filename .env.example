# Application
NODE_ENV=development
PORT=3000
APP_NAME=Beatport Downloader
APP_VERSION=1.0.0

# Electron
ELECTRON_ENABLE_LOGGING=true
ELECTRON_ENABLE_SECURITY_WARNINGS=true
ELECTRON_DEFAULT_ERROR_MODE=dialog
ELECTRON_OVERRIDE_DIST_PATH=

# Development
VITE_DEV_SERVER_HOST=127.0.0.1
VITE_DEV_SERVER_PORT=5173

# Security
CSP_POLICY="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https:;"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Beatport API
BEATPORT_API_KEY=your_beatport_api_key
BEATPORT_API_SECRET=your_beatport_api_secret
BEATPORT_API_URL=https://api.beatport.com/v4

# File Storage
DOWNLOAD_PATH=downloads
MAX_FILE_SIZE=100MB
MAX_CONCURRENT_DOWNLOADS=3

# Updates
AUTO_UPDATE_FEED_URL=
DISABLE_AUTO_UPDATES=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100MB

# Performance
MAX_MEMORY=512MB
GARBAGE_COLLECTION_INTERVAL=300000

# Development Tools
ENABLE_DEVTOOLS=true
ENABLE_SOURCE_MAPS=true

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/beatport_db"

# File Upload
UPLOAD_DIR=uploads

# Cache (Optional)
REDIS_URL=redis://localhost:6379

# API Keys (if needed)
# API_KEY=your_api_key_here

# GitHub API Configuration
GITHUB_TOKEN=your_github_token_here

# File Operations Configuration
STREAM_BUFFER_SIZE=8192

# Shell Server Configuration
ALLOWED_COMMANDS=git,npm,node,ts-node,typescript
MAX_EXECUTION_TIME=30000  # 30 seconds in milliseconds

# Knowledge Graph Configuration
STORAGE_PATH=.cursor/knowledge
MAX_ENTRIES=10000

# Task Manager Configuration
TASK_STORAGE_PATH=.cursor/tasks
MAX_TASKS=1000
