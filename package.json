{
  "name": "beatport-downloader",
  "productName": "beatport-downloader",
  "version": "1.0.0",
  "description": "An Electron-based desktop application for downloading and managing your Beatport music collection",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerbauer1337/beatport-downloader.git"
  },
  "author": "powerbauer1337",
  "bugs": {
    "url": "https://github.com/powerbauer1337/beatport-downloader/issues"
  },
  "homepage": "https://github.com/powerbauer1337/beatport-downloader#readme",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "test": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "prepare": "husky install",
    "start": "electron-vite preview"
  },
  "license": "MIT",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/lab": "^5.0.0-alpha.165",
    "@mui/material": "^5.15.12",
    "cursor-mcp-installer-free": "^0.1.3",
    "dotenv": "^16.4.7",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.1.8",
    "ini": "^4.1.2",
    "ioredis": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron-forge/publisher-github": "^7.3.0",
    "@playwright/test": "^1.51.1",
    "@types/dotenv": "^6.1.1",
    "@types/ini": "^4.1.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "vite": "^5.1.5"
  },
  "build": {
    "appId": "com.beatportdownloader.app",
    "productName": "Beatport Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Audio"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
