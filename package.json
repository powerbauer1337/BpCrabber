{
  "name": "beatport-downloader",
  "productName": "beatport-downloader",
  "version": "1.0.0",
  "description": "A desktop application for downloading tracks from Beatport",
  "type": "module",
  "main": "./dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerbauer1337/beatport-downloader.git"
  },
  "author": "Your Name",
  "bugs": {
    "url": "https://github.com/powerbauer1337/beatport-downloader/issues"
  },
  "homepage": "https://github.com/powerbauer1337/beatport-downloader#readme",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:next": "next dev",
    "dev:electron": "cross-env NODE_ENV=development npm-run-all -s electron:build electron:start",
    "electron:build": "tsup",
    "electron:build:watch": "tsup --watch",
    "electron:start": "electron .",
    "build": "electron-vite build",
    "build:next": "next build",
    "build:electron": "tsup",
    "start": "electron-forge start",
    "pack": "electron-forge package",
    "dist": "npm run build && electron-builder",
    "electron:dist": "electron-builder --dir",
    "electron:dist:win": "electron-builder --win",
    "electron:dist:mac": "electron-builder --mac",
    "electron:dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "prepare": "husky install",
    "preview": "electron-vite preview",
    "make": "electron-forge make"
  },
  "license": "MIT",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/lab": "^5.0.0-alpha.165",
    "@mui/material": "^5.14.3",
    "@types/helmet": "^0.0.48",
    "cursor-mcp-installer-free": "^0.1.3",
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.3",
    "electron-serve": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "get-port-please": "^3.1.2",
    "helmet": "^8.1.0",
    "ini": "^4.1.2",
    "ioredis": "^5.6.0",
    "next": "^13.5.6",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.10.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-vite": "^7.8.0",
    "@electron-forge/publisher-github": "^7.3.0",
    "@playwright/test": "^1.51.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/ini": "^4.1.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.24",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "electron-vite": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.5"
  },
  "build": {
    "appId": "com.beatportdownloader.app",
    "productName": "Beatport Downloader",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
